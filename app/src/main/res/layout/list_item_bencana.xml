<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JUDUL : "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvNamaBencana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gempa Bumi Guncang wilayah x
"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAIL : "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gempa Bumi bumi kembali getarkan Indonesia hari ini, Selasa (13/7/2021). Badan Meteorologi, Klimatologi, dan Geofisika (BMKG) menginformasikan Gempa terjadi di Kecamatan x, pada pukul 15:30:14 WIB dengan magnitudo 4,7."
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TANGGAL : "
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-02-2021"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOTO : "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivFoto"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/image_satu"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:text="Ubah"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:text="Hapus"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>